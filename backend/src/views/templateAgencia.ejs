<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title><%= config.brand.name %> - Agencia</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style> html { scroll-behavior: smooth; } </style>
  </head>
  <body style="font-family: <%= config.theme.fontFamily %>; background-color: <%= background %>; color: <%= textColor %>">
    <% if (previewMode) { %>
      <style>
        #preview-wrapper {
          transform: scale(0.6);
          transform-origin: top center;
          width: 166.66vw;
          margin-left: -33.33vw;
        }
      </style>
      <div id="preview-wrapper">
    <% } %>

    <!-- Header -->
    <header class="max-w-7xl mx-auto flex justify-between items-center px-6 py-5">
      <div class="flex items-center gap-3">
        <% if (config.brand.logo) { %>
          <img src="<%= config.brand.logo %>" alt="Logo" class="h-8">
        <% } %>
        <span class="text-xl font-bold"><%= config.brand.name %></span>
      </div>
      <nav class="space-x-4 text-sm font-medium hidden md:block">
        <a href="#hero">Inicio</a>
        <a href="#about">Sobre nosotros</a>
        <a href="#features">Servicios</a>
        <a href="#products">Planes</a>
        <a href="#testimonials">Clientes</a>
        <a href="#faq">FAQ</a>
        <a href="#contact">Contacto</a>
      </nav>
    </header>

    <main>
      <!-- HERO -->
      <section id="hero" class="text-center px-6 py-32 bg-cover bg-center" style="background-image: url('<%= config.hero.backgroundImage %>')">
        <h1 class="text-5xl font-bold mb-4 text-white drop-shadow"><%= config.hero.title %></h1>
        <p class="text-xl mb-6 text-white drop-shadow"><%= config.hero.subtitle %></p>
        <a href="<%= config.hero.ctaLink %>" class="inline-block bg-[<%= config.theme.colorPrimary %>] text-white px-8 py-3 rounded-lg shadow hover:scale-105 transition">
          <%= config.hero.ctaText %>
        </a>
      </section>

      <!-- ABOUT -->
      <section id="about" class="px-6 py-20 max-w-7xl mx-auto flex flex-col md:flex-row gap-10 items-center">
        <img src="<%= config.about.image %>" alt="Sobre nosotros" class="w-full md:w-1/2 rounded shadow" />
        <div class="w-full md:w-1/2">
          <h2 class="text-3xl font-semibold mb-4"><%= config.about.heading %></h2>
          <p class="text-lg"><%= config.about.content %></p>
        </div>
      </section>

      <!-- FEATURES -->
      <section id="features" class="px-6 py-20 bg-gray-50">
        <h2 class="text-3xl font-semibold text-center mb-10">Nuestros Servicios</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-7xl mx-auto">
          <% config.features.forEach(f => { %>
            <div class="bg-white rounded shadow p-6 text-center">
              <div class="text-5xl mb-3"><%= f.icon %></div>
              <h3 class="text-xl font-bold"><%= f.title %></h3>
              <p class="mt-2 text-sm"><%= f.description %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- PRODUCTS -->
      <section id="products" class="px-6 py-20">
        <h2 class="text-3xl font-semibold text-center mb-10">Nuestros Planes</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
          <% config.products.forEach(p => { %>
            <div class="border rounded shadow p-6 text-center">
              <h3 class="text-xl font-bold mb-2"><%= p.title %></h3>
              <p class="text-sm mb-4"><%= p.description %></p>
              <span class="text-lg font-semibold text-[<%= config.theme.colorPrimary %>] block mb-4"><%= p.price %></span>
              <a href="#" class="bg-[<%= config.theme.colorPrimary %>] text-white px-5 py-2 rounded hover:opacity-90 transition">Contratar</a>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- TESTIMONIALS -->
      <section id="testimonials" class="px-6 py-20 max-w-7xl mx-auto">
        <h2 class="text-3xl font-semibold text-center mb-10">Clientes satisfechos</h2>
        <div class="flex flex-wrap justify-center gap-6">
          <% config.testimonials.forEach(t => { %>
            <div class="bg-white p-6 rounded shadow w-full md:w-1/3 text-center">
              <img src="<%= t.avatar %>" alt="<%= t.name %>" class="w-16 h-16 rounded-full mx-auto mb-4">
              <p class="italic">"<%= t.quote %>"</p>
              <p class="mt-2 font-semibold"><%= t.name %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- FAQ -->
      <section id="faq" class="px-6 py-20 max-w-4xl mx-auto">
        <h2 class="text-3xl font-semibold text-center mb-10">Preguntas frecuentes</h2>
        <div class="space-y-6">
          <% config.faqs.forEach(f => { %>
            <div class="bg-white border-l-4 border-[<%= config.theme.colorPrimary %>] p-4 rounded shadow">
              <h4 class="font-bold mb-2"><%= f.question %></h4>
              <p><%= f.answer %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <!-- CONTACT -->
      <section id="contact" class="px-6 py-20">
        <h2 class="text-3xl font-semibold text-center mb-6">Solicita una reunión</h2>
        <div class="text-center mb-6">
          <p>Email: <%= config.contact.email %></p>
          <p>Teléfono: <%= config.contact.phone %></p>
          <p>Dirección: <%= config.contact.address %></p>
        </div>
      </section>
    </main>

    <!-- FOOTER -->
    <footer class="bg-[<%= config.theme.colorPrimary %>] text-white px-6 py-10">
      <div class="max-w-6xl mx-auto text-center">
        <h3 class="font-bold text-lg mb-2"><%= config.brand.name %></h3>
        <p class="text-sm"><%= config.footer.text %></p>
      </div>
    </footer>

    <a href="#hero" class="fixed bottom-6 right-6 bg-[<%= config.theme.colorPrimary %>] text-white p-3 rounded-full shadow-lg hover:scale-105 transition">↑</a>
    <% if (previewMode) { %></div><% } %>
  </body>
</html>
