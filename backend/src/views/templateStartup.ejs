<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title><%= config.brand.name %> - Startup</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      html { scroll-behavior: smooth; }
      .section-card { @apply bg-white rounded-3xl shadow-lg p-10; }
    </style>
  </head>
  <body class="font-sans" style="font-family: <%= config.theme.fontFamily %>; background-color: <%= background %>; color: <%= textColor %>">
    <% if (previewMode) { %>
      <style>
        #preview-wrapper {
          transform: scale(0.6);
          transform-origin: top center;
          width: 166.66vw;
          margin-left: -33.33vw;
        }
      </style>
      <div id="preview-wrapper">
    <% } %>

    <!-- Header -->
    <header class="max-w-7xl mx-auto flex justify-between items-center px-6 py-6">
      <div class="flex items-center gap-4">
        <% if (config.brand.logo) { %>
          <img src="<%= config.brand.logo %>" alt="Logo" class="h-10">
        <% } %>
        <span class="text-2xl font-bold tracking-tight"><%= config.brand.name %></span>
      </div>
      <nav class="hidden md:flex gap-6 text-sm font-medium">
        <a href="#hero">Inicio</a>
        <a href="#features">Ventajas</a>
        <a href="#program">Programa</a>
        <a href="#products">Productos</a>
        <a href="#about">Nosotros</a>
        <a href="#testimonials">Testimonios</a>
        <a href="#faq">FAQ</a>
        <a href="#contact">Contacto</a>
      </nav>
    </header>

    <main class="space-y-24">

      <!-- HERO -->
      <section id="hero" class="text-center px-6 py-32 bg-cover bg-center rounded-b-[3rem] shadow-xl" style="background-image: url('<%= config.hero.backgroundImage %>')">
        <h1 class="text-5xl font-extrabold mb-4 text-white drop-shadow"><%= config.hero.title %></h1>
        <p class="text-xl mb-6 text-white drop-shadow-md"><%= config.hero.subtitle %></p>
        <a href="<%= config.hero.ctaLink %>" class="inline-block bg-[<%= config.theme.colorPrimary %>] text-white px-8 py-3 rounded-full shadow-lg hover:scale-105 transition-transform duration-300">
          <%= config.hero.ctaText %>
        </a>
      </section>

      <!-- FEATURES -->
      <section id="features" class="px-6">
        <div class="section-card max-w-7xl mx-auto">
          <h2 class="text-3xl font-semibold text-center mb-10">Ventajas</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% config.features.forEach(f => { %>
              <div class="bg-[<%= config.theme.colorSecondary %>] text-white rounded-xl p-6 text-center hover:shadow-xl transition">
                <div class="text-5xl mb-3"><%= f.icon %></div>
                <h3 class="text-xl font-bold"><%= f.title %></h3>
                <p class="mt-2 text-sm"><%= f.description %></p>
              </div>
            <% }) %>
          </div>
        </div>
      </section>

      <!-- PROGRAM -->
      <section id="program" class="bg-gray-900 text-white px-6 py-20">
        <div class="max-w-7xl mx-auto flex flex-col lg:flex-row items-center gap-12">
          <div class="w-full lg:w-1/2">
            <img src="<%= config.program.image %>" alt="Programa" class="rounded-2xl shadow-xl w-full max-w-md mx-auto" />
          </div>
          <div class="w-full lg:w-1/2 space-y-6">
            <h2 class="text-4xl font-bold"><%= config.program.title %></h2>
            <div class="space-y-4 text-sm text-gray-300">
              <div><h3 class="font-bold text-white">El porqué:</h3><p><%= config.program.reason %></p></div>
              <div><h3 class="font-bold text-white">Funcionamiento:</h3><p><%= config.program.functioning %></p></div>
              <div><h3 class="font-bold text-white">Metodología:</h3><p><%= config.program.methodology %></p></div>
              <div><h3 class="font-bold text-white">Selección:</h3><p><%= config.program.selection %></p></div>
            </div>
            <div class="flex gap-4 pt-4">
              <a href="<%= config.program.cta1.link %>" class="bg-[<%= config.theme.colorPrimary %>] text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition">
                <%= config.program.cta1.text %>
              </a>
              <a href="<%= config.program.cta2.link %>" class="border border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-black transition">
                <%= config.program.cta2.text %>
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- PRODUCTS -->
      <section id="products" class="px-6">
        <div class="section-card max-w-6xl mx-auto">
          <h2 class="text-3xl font-semibold text-center mb-10">Nuestros Productos</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% config.products.forEach(p => { %>
              <div class="rounded-xl shadow-lg p-6 text-center hover:scale-[1.02] transition-transform">
                <img src="<%= p.image %>" alt="<%= p.title %>" class="mb-4 mx-auto rounded-lg" />
                <h3 class="text-xl font-bold"><%= p.title %></h3>
                <p class="text-sm mb-2"><%= p.description %></p>
                <span class="text-lg font-semibold text-[<%= config.theme.colorPrimary %>] block"><%= p.price %></span>
              </div>
            <% }) %>
          </div>
        </div>
      </section>

      <!-- ABOUT -->
      <section id="about" class="px-6">
        <div class="section-card max-w-7xl mx-auto flex flex-col md:flex-row gap-10 items-center">
          <img src="<%= config.about.image %>" alt="Imagen" class="w-full md:w-1/2 rounded-xl shadow-md" />
          <div class="w-full md:w-1/2">
            <h2 class="text-3xl font-semibold mb-4"><%= config.about.heading %></h2>
            <p class="text-lg leading-relaxed"><%= config.about.content %></p>
          </div>
        </div>
      </section>

      <!-- TESTIMONIALS -->
      <section id="testimonials" class="px-6">
        <div class="section-card max-w-7xl mx-auto">
          <h2 class="text-3xl font-semibold text-center mb-10">Testimonios</h2>
          <div class="flex flex-wrap justify-center gap-6">
            <% config.testimonials.forEach(t => { %>
              <div class="bg-gray-100 p-6 rounded-xl shadow-md w-full md:w-1/3 text-center">
                <img src="<%= t.avatar %>" alt="<%= t.name %>" class="w-16 h-16 rounded-full mx-auto mb-4">
                <p class="italic">"<%= t.quote %>"</p>
                <p class="mt-2 font-semibold"><%= t.name %></p>
              </div>
            <% }) %>
          </div>
        </div>
      </section>

      <!-- FAQ -->
      <section id="faq" class="px-6">
        <div class="section-card max-w-4xl mx-auto">
          <h2 class="text-3xl font-semibold text-center mb-10">Preguntas frecuentes</h2>
          <div class="space-y-6">
            <% config.faqs.forEach(f => { %>
              <div class="bg-white border-l-4 border-[<%= config.theme.colorPrimary %>] p-4 rounded-xl shadow">
                <h4 class="font-bold mb-2"><%= f.question %></h4>
                <p><%= f.answer %></p>
              </div>
            <% }) %>
          </div>
        </div>
      </section>

      <!-- CONTACT -->
      <section id="contact" class="px-6">
        <div class="section-card max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-semibold mb-6">Contacto</h2>
          <p>Email: <%= config.contact.email %></p>
          <p>Teléfono: <%= config.contact.phone %></p>
          <p>Dirección: <%= config.contact.address %></p>
        </div>
      </section>
    </main>

    <!-- FOOTER -->
    <footer class="bg-[<%= config.theme.colorPrimary %>] text-white px-6 py-10 mt-24">
      <div class="max-w-6xl mx-auto text-center">
        <h3 class="font-bold text-lg mb-2"><%= config.brand.name %></h3>
        <p class="text-sm"><%= config.footer.text %></p>
      </div>
    </footer>

    <a href="#hero" class="fixed bottom-6 right-6 bg-[<%= config.theme.colorPrimary %>] text-white p-3 rounded-full shadow-lg hover:scale-105 transition">↑</a>
    <% if (previewMode) { %></div><% } %>
  </body>
</html>